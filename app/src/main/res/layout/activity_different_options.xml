<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_home"
    tools:context=".DifferentOptions">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drawkit_different_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <Button
        android:id="@+id/puc_but_differentoptions_id"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@drawable/ic_but_background2"
        android:drawableStart="@drawable/ic_student_sticker"
        android:paddingStart="10dp"
        android:text="PUC"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/batchelordegrree_but_differentoptions_id"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@drawable/ic_but_background2"
        android:drawableStart="@drawable/ic_student_sticker"
        android:paddingStart="10dp"
        android:text="Bachelor Degree"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puc_but_differentoptions_id"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/masterdegree_but_differentoptions_id"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@drawable/ic_but_background2"
        android:drawableStart="@drawable/ic_student_sticker"
        android:paddingStart="10dp"
        android:textSize="16dp"
        android:text="Masters Degree"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/batchelordegrree_but_differentoptions_id"
        app:layout_constraintVertical_bias="0.088" />


</androidx.constraintlayout.widget.ConstraintLayout>